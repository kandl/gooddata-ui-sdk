{
    "include": ["src/**/*", "src/**/*.json"],
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "./src",
        "composite": true,
        "incremental": true,
        "declaration": true,
        "declarationMap": true,
        "target": "es2017",
        "jsx": "react",
        "lib": ["ESNext","dom"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "importHelpers": true,
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "esm",
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": false,
        "resolveJsonModule": true       
    },
    "compileOnSave": false,
    "exclude": ["node_modules", "esm", "**/__mocks__/**/*"]
}
