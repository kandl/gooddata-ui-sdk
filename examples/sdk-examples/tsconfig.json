{
    "compilerOptions": {
        "module": "commonjs",
        "allowJs": true,
        "jsx": "react",
        "sourceMap": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "lib": ["es7", "dom"],
        "outDir": "dist",
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        // //
        // "baseUrl": ".",
        // "resolveJsonModule": true,
        // "rootDir": "./src",
        // "composite": true,
        // "incremental": true,
        // "declaration": true,
        // "declarationMap": true
    },
    "include": ["src/**/*", "typings"],
    "exclude": ["**/node_modules", "dist"]
}


