{
    "exclude": ["**/tests", "**/test"],
    "include": [
        "scenarios/**/*",
        "scenarios/**/*.json",
        "cypress/**/*",
        "cypress/**/*.json",
        "reference_workspace/**/*",
        "reference_workspace/**/*.json"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "rootDirs": ["./scenarios", "./cypress", "./reference_workspace"],
        "outDir": "./esm",
        "target": "ES2022",
        "lib": ["ES2022", "DOM"],
        "module": "Node16",
        "moduleResolution": "Node16",
        "jsx": "react",
        "importHelpers": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "types": ["cypress-real-events", "node", "@cypress/grep"]
    }
}
