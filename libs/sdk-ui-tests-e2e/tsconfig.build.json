{
    "extends": "./tsconfig.json",
    "exclude": ["node_modules"],
    "include": [
        "src/**/*",
        "src/**/*.json",
        "scenarios/**/*",
        "scenarios/**/*.json",
        "cypress/**/*",
        "cypress/**/*.json",
        "reference_workspace/**/*",
        "reference_workspace/**/*.json"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "resolveJsonModule": true,
        "rootDirs": ["./src", "./cypress", "./scenarios"],
        "composite": true,
        "incremental": true,
        "declaration": true,
        "declarationMap": true
    }
}
