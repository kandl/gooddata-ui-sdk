{
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "es2017",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": ["es6", "dom", "ES2017.Intl", "ES2018.Intl", "ES2020.Intl", "ESNext.Intl"],
        "sourceMap": true,
        "importHelpers": true,
        "outDir": "./esm",
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "resolveJsonModule": true,
        "baseUrl": ".."
    },
    "exclude": ["**/node_modules", "esm"]
}
